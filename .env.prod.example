# ====================================================================================
# SOLANA MAFIA - PRODUCTION ENVIRONMENT CONFIGURATION (EXAMPLE)
# ====================================================================================
# Копируйте в .env.prod и заполните своими значениями для production
# ====================================================================================

# === BASIC ENVIRONMENT SETTINGS ===
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log

# === DATABASE CONFIGURATION ===
DATABASE_URL=postgresql://solana_mafia:CHANGE_THIS_PASSWORD@postgres:5432/solana_mafia_db
POSTGRES_DB=solana_mafia_db
POSTGRES_USER=solana_mafia
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD

# === REDIS CONFIGURATION ===  
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=CHANGE_THIS_PASSWORD

# === SOLANA BLOCKCHAIN CONFIGURATION ===
# Используйте ваш paid RPC endpoint для production
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com/
SOLANA_PROGRAM_ID=YOUR_MAINNET_PROGRAM_ID_HERE

# === ADVANCED RPC CONFIGURATION ===
RPC_RATE_LIMIT=100
RPC_BURST_LIMIT=200
RPC_TIMEOUT=30
RPC_MAX_RETRIES=5
BACKUP_RPC_URLS=https://solana-api.projectserum.com,https://rpc.ankr.com/solana
BACKUP_RPC_RATE_LIMITS=50,30
RPC_PLAN_TYPE=paid
ENABLE_MULTIPLE_ENDPOINTS=true
ENABLE_ADAPTIVE_RATE_LIMIT=true

# === SECURITY & AUTHENTICATION ===
SECRET_KEY=CHANGE_THIS_TO_STRONG_SECRET_KEY_IN_PRODUCTION

# === API SERVER CONFIGURATION ===
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# === WEBSOCKET CONFIGURATION ===
WEBSOCKET_ENABLED=true
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8001

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# === ADMIN CONFIGURATION ===
ADMIN_WALLETS=YOUR_PRODUCTION_ADMIN_WALLET_ADDRESS
ADMIN_PRIVATE_KEY=YOUR_PRODUCTION_ADMIN_PRIVATE_KEY

# === DYNAMIC PRICING SYSTEM ===
DYNAMIC_PRICING_ENABLED=true
PRICE_UPDATE_INTERVAL=300

# === INDEXER CONFIGURATION ===
INDEXER_BATCH_SIZE=2000
INDEXER_POLL_INTERVAL=2
INDEXER_MAX_RETRIES=5

# === EARNINGS SCHEDULER CONFIGURATION ===  
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL=30
EARNINGS_SCHEDULE_UTC_HOUR=0
SCHEDULER_TIMEOUT_MINUTES=60

# === DATA SOURCE CONFIGURATION ===
USE_REAL_BLOCKCHAIN_DATA=true

# === BATCH PROCESSING ===
BATCH_SIZE_ACCOUNTS=1000
BATCH_SIZE_UPDATES=10
MAX_CONCURRENT_UPDATES=100
SCHEDULER_MAX_WORKERS=10

# === EARNINGS RATE LIMITING ===
EARNINGS_MAX_RPS=20
EARNINGS_RESERVE_PERCENTAGE=80
EARNINGS_BATCH_SIZE=20
EARNINGS_BATCH_ENABLED=true

# === RETRY LOGIC ===
RETRY_DELAY_BASE=1
FAILED_PLAYER_RETRY_HOURS=0.5

# === TELEGRAM BOT CONFIGURATION ===
TELEGRAM_BOT_TOKEN=YOUR_PRODUCTION_BOT_TOKEN
TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram/webhook

# === SOCIAL MEDIA LINKS ===
SOCIAL_TWITTER_URL=https://twitter.com/SolanaMafia
SOCIAL_TELEGRAM_URL=https://t.me/SolanaMafia  
SOCIAL_TELEGRAM_CHAT_URL=https://t.me/SolanaMafiaChat
SOCIAL_CEO_CHANNEL_URL=https://t.me/SolanaMafiaCEO

# ====================================================================================
# FRONTEND (NEXT.JS) PRODUCTION CONFIGURATION 
# ====================================================================================

# === SOLANA FRONTEND CONFIGURATION ===
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
NEXT_PUBLIC_PROGRAM_ID_MAINNET=YOUR_MAINNET_PROGRAM_ID_HERE

# === FRONTEND API CONFIGURATION ===
NEXT_PUBLIC_API_URL=https://your-domain.com/api
NEXT_PUBLIC_WS_URL=wss://your-domain.com/ws

# === SSL/TLS CONFIGURATION ===
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/cert.pem
SSL_PRIVATE_KEY_PATH=/etc/nginx/ssl/key.pem

# === MONITORING & ANALYTICS ===
SENTRY_DSN=YOUR_SENTRY_DSN_FOR_ERROR_TRACKING
ANALYTICS_ID=YOUR_ANALYTICS_ID