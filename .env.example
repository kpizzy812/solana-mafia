# ====================================================================================
# SOLANA MAFIA - UNIFIED ENVIRONMENT CONFIGURATION (EXAMPLE)
# ====================================================================================
# Шаблон объединенного .env файла 
# Скопируйте в .env и заполните своими значениями
# ====================================================================================

# === BASIC ENVIRONMENT SETTINGS ===
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=console
LOG_FILE=

# === DATABASE CONFIGURATION ===
# Для Docker: используйте postgres как hostname
# Для локального: используйте localhost
DATABASE_URL=postgresql://solana_mafia:password@postgres:5432/solana_mafia_db

# === REDIS CONFIGURATION ===  
# Для Docker: используйте redis как hostname
# Для локального: используйте localhost
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# === SOLANA BLOCKCHAIN CONFIGURATION ===
# Замените на ваш RPC endpoint
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WS_URL=wss://api.devnet.solana.com/
SOLANA_PROGRAM_ID=GtaYPUCEphDV1YgsS6VnBpTkkJwpuaQZf3ptFssyNvKU

# === ADVANCED RPC CONFIGURATION ===
RPC_RATE_LIMIT=10
RPC_BURST_LIMIT=20
RPC_TIMEOUT=30
RPC_MAX_RETRIES=3
BACKUP_RPC_URLS=https://solana-api.projectserum.com,https://api.mainnet-beta.solana.com
BACKUP_RPC_RATE_LIMITS=5,3
RPC_PLAN_TYPE=free
ENABLE_MULTIPLE_ENDPOINTS=false
ENABLE_ADAPTIVE_RATE_LIMIT=true

# === SECURITY & AUTHENTICATION ===
SECRET_KEY=your-secret-key-change-in-production

# === API SERVER CONFIGURATION ===
HOST=127.0.0.1
PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# === WEBSOCKET CONFIGURATION ===
WEBSOCKET_ENABLED=true
WEBSOCKET_HOST=127.0.0.1
WEBSOCKET_PORT=8001

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# === ADMIN CONFIGURATION ===
ADMIN_WALLETS=your_admin_wallet_address_here
ADMIN_PRIVATE_KEY=your_base58_private_key_here

# === DYNAMIC PRICING SYSTEM ===
DYNAMIC_PRICING_ENABLED=true
PRICE_UPDATE_INTERVAL=300

# === INDEXER CONFIGURATION ===
INDEXER_BATCH_SIZE=1000
INDEXER_POLL_INTERVAL=5
INDEXER_MAX_RETRIES=3

# === EARNINGS SCHEDULER CONFIGURATION ===  
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL=60
EARNINGS_SCHEDULE_UTC_HOUR=0
SCHEDULER_TIMEOUT_MINUTES=30

# === DATA SOURCE CONFIGURATION ===
USE_REAL_BLOCKCHAIN_DATA=true

# === BATCH PROCESSING ===
BATCH_SIZE_ACCOUNTS=500
BATCH_SIZE_UPDATES=1
MAX_CONCURRENT_UPDATES=50
SCHEDULER_MAX_WORKERS=5

# === EARNINGS RATE LIMITING ===
EARNINGS_MAX_RPS=6
EARNINGS_RESERVE_PERCENTAGE=60
EARNINGS_BATCH_SIZE=5
EARNINGS_BATCH_ENABLED=true

# === RETRY LOGIC ===
RETRY_DELAY_BASE=2
FAILED_PLAYER_RETRY_HOURS=1

# === TELEGRAM BOT CONFIGURATION (optional) ===
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram/webhook

# === SOCIAL MEDIA LINKS FOR QUESTS ===
SOCIAL_TWITTER_URL=https://twitter.com/SolanaMafia
SOCIAL_TELEGRAM_URL=https://t.me/SolanaMafia  
SOCIAL_TELEGRAM_CHAT_URL=https://t.me/SolanaMafiaChat
SOCIAL_CEO_CHANNEL_URL=https://t.me/SolanaMafiaCEO

